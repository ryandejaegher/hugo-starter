<link href="{{path 'https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css'}}" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.0/dist/alpine.min.js" defer></script>



<div x-data="{active:false}">

<div @click="active = !active" :class="{'hidden' : active === true}" class="font-bold text-{{textColor}} text-center py-2 md:py-4 md:text-xl bg-{{bgColor}}-200">{{message}}</div>
</div>
